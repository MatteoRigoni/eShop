<div class="card m-2 p-2" style="width: 12rem;">
    <img src="@Product.ImageLink" class="card-img-top" />
    <div class="card-body">
        <h6 class="card-title"><NavLink Href="@($"product/{Product.Id}")">@Product.Name</NavLink></h6>
        <p class="card-text" style="color:darkred">@Product.Price.ToString("c")</p>
    </div>
</div>

@code {
    [Parameter]
    public Product Product { get; set; }
}
